$backgroundColor=green
$appBackgroundColor=green

disable-user-select()
  user-select: none
  -moz-user-select: none
  -webkit-user-select: none
  -ms-user-select: none

enable-user-select()
  user-select: text
  -moz-user-select: text
  -webkit-user-select: text
  -ms-user-select: text

fix-width()
  box-sizing border-box
  width 100%
  margin-left 0
  margin-right 0
  padding-left 0
  padding-right 0

fix-height()
  box-sizing border-box
  height: 100%
  margin-top 0
  margin-bottom 0
  padding-top 0
  padding-bottom 0

